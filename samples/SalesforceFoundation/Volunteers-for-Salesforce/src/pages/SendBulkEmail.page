<apex:page controller="VOL_CTRL_SendBulkEmail"  title="{!$Label.labelMassEmailVolunteersTitle}" tabStyle="Task" docType="html-5.0" standardStylesheets="false">
    <apex:stylesheet value="{!URLFOR($Resource.sfdo213, '/assets/styles/salesforce-lightning-design-system-vf.min.css')}" />

    <apex:form id="vfForm">
        <div class="sfdo213">
            <!-- PAGE SPINNER -->
            <div class="slds-spinner_container" style="z-index:999;position:fixed;display:none;" id="divLoading">
                <div class="slds-spinner--brand slds-spinner slds-spinner--medium" style="position:fixed;top:30%;" aria-hidden="false" role="alert">
                    <div class="slds-spinner__dot-a"></div>
                    <div class="slds-spinner__dot-b"></div>
                </div>
            </div>
            <!-- PAGE HEADER -->
            <div class="slds-page-header" role="banner">
                <div class="slds-grid">
                    <div class="slds-col">
                        <h1 class="slds-text-heading--medium">{!$Label.labelMassEmailVolunteersTitle}</h1>
                        <p>{!$Label.labelMassEmailTitle} {!strJobName}</p>
                    </div>
                <div class="slds-col slds-no-flex slds-align-middle">
                        <div class="slds-button-group" role="group">
                            <apex:commandButton id="sendBTN" styleClass="slds-button slds-button--brand" action="{!SendMail}" value="{!$Label.labelButtonSend}" immediate="false"/>
                            <apex:commandButton id="cancelBTN" styleClass="slds-button slds-button--neutral" action="{!cancel}" value="{!$Label.labelButtonClose}"  immediate="true"/>
                        </div>
                    </div>
                </div>
            </div>
            <!-- PAGE ERRORS -->
            <c:UTIL_PageMessages />
            <form class="slds-form slds-form--stacked">
                <div class="slds-form-element slds-p-top--small slds-p-horizontal--medium">
                    <apex:outputLabel value="{!$Label.labelFrom}" for="idFrom" styleClass="slds-form-element__label" />
                    <div class="slds-form-element__control">
                        <div class="slds-select_container">
                            <apex:selectList id="idFrom" value="{!fromEmailId}" size="1" styleClass="slds-select" >
                                <apex:selectOptions value="{!listSOFromEmails}" />
                            </apex:selectList>
                        </div>
                    </div>
                </div>
                <div class="slds-form-element slds-p-top--small slds-p-horizontal--medium">
                    <apex:outputLabel value="{!$Label.labelMassEditVolunteersStatus}" for="idStatus" styleClass="slds-form-element__label" />
                    <div class="slds-form-element__control">
                        <apex:inputField id="idStatus" styleClass="slds-select slds-input" value="{!hourStatus.Status__c}">
                            <apex:actionSupport immediate="false" event="onchange" rerender="idNumContacts,idNumContactsRead" action="{!StatusChanged}" status="loading"/>
                        </apex:inputField>
                    </div>
                </div>
                <div class="slds-form-element slds-p-top--small slds-p-horizontal--medium">
                    <div class="slds-form-element__control">
                        <label class="slds-checkbox">
                            <apex:inputCheckbox id="idUniqueContacts" value="{!fEmailContactsOnlyOnce}" html-aria-describedby="{!$Component.vfForm.uniqueContactsHelpText}">
                                <apex:actionSupport immediate="false" event="onchange" rerender="idNumContacts,idNumContactsRead" action="{!StatusChanged}" status="loading"/>
                            </apex:inputCheckbox>
                            <span class="slds-checkbox--faux"></span>
                            <apex:outputLabel for="idUniqueContacts" styleClass="slds-form-element__label" value="{!$Label.labelMassEmailVolunteersUniqueContacts}"/>
                        </label>
                    </div>
                    <apex:outputText styleClass="slds-form-element__help" id="uniqueContactsHelpText" value="{!$Label.labelMassEmailVolunteersUniqueContactsHelpText}" />
                </div>
                <div class="slds-form-element slds-p-top--small slds-p-horizontal--medium">
                    <apex:outputLabel value="{!$Label.labelNumberOfContacts}" for="idNumContactsRead" styleClass="slds-form-element__label" />
                    <div class="slds-form-element__control">
                        <apex:outputText id="idNumContacts" value="{!numberOfContacts}" style="font-weight:bold;"/>
                        <apex:inputText id="idNumContactsRead" value="{!numberOfContacts}" html-readonly="true" styleClass="slds-assistive-text" html-aria-describedby="{!$Component.vfForm.numContactsHelpText}"/>
                    </div>
                    <apex:outputText styleClass="slds-form-element__help" id="numContactsHelpText" value="{!$Label.labelNumberOfContactsHelpText}" />
                </div>
                <div class="slds-form-element slds-p-top--small slds-p-horizontal--medium">
                    <div class="slds-form-element__control">
                        <label class="slds-checkbox">
                            <apex:inputCheckbox id="idLogActivity" value="{!fLogActivity}" html-aria-describedby="{!$Component.vfForm.logActivityHelpText}"/>
                            <span class="slds-checkbox--faux"></span>
                            <apex:outputLabel styleClass="slds-form-element__label" for="idLogActivity" value="{!$Label.labelMassEmailVolunteersLogActivity}"/>
                        </label>
                    </div>
                    <apex:outputText styleClass="slds-form-element__help" id="logActivityHelpText" value="{!$Label.labelMassEmailVolunteersLogActivityHelpText}" />
                </div>
                <div class="slds-form-element slds-p-top--small slds-p-horizontal--medium">
                    <apex:outputLabel value="{!$Label.labelTemplateObject}" for="idTemplateObject" styleClass="slds-form-element__label" />
                    <div class="slds-form-element__control">
                        <div class="slds-select_container">
                            <apex:selectList id="idTemplateObject" value="{!templateObject}" size="1" styleClass="slds-select" html-aria-describedby="{!$Component.vfForm.templateObjectHelpText}" >
                                <apex:selectOption itemValue="Campaign" itemLabel="{!$ObjectType.Campaign.Label}" />
                                <apex:selectOption itemValue="Job" itemLabel="{!$ObjectType.Volunteer_Job__c.Label}" />
                                <apex:selectOption itemValue="Shift" itemLabel="{!$ObjectType.Volunteer_Shift__c.Label}" />
                                <apex:selectOption itemValue="Hours" itemLabel="{!$ObjectType.Volunteer_Hours__c.Label}" />
                            </apex:selectList>
                        </div>
                    </div>
                    <apex:outputText styleClass="slds-form-element__help" id="templateObjectHelpText" value="{!$Label.labelTemplateObjectHelpText}" />
                </div>
                <div class="slds-form-element slds-p-top--small slds-p-horizontal--medium">
                    <apex:outputLabel value="{!$ObjectType.EmailTemplate.Label}" styleClass="slds-form-element__label" for="idTemplate"/>
                    <div class="slds-form-element__control">
                        <div class="slds-select_container">
                            <apex:selectList id="idTemplate" value="{!templateId}" size="1" styleClass="slds-select" >
                                <apex:actionSupport immediate="false" event="onchange" status="loading" rerender="txtSubject,txtMessage,readSubject,readMessage,panelEditTemplate" action="{!LoadEmailTemplate}" />
                                <apex:selectOptions value="{!listSOTemplates}" /> 
                            </apex:selectList>
                        </div>
                        <ul class="slds-list--horizontal slds-has-inline-block-links--space">
                            <li class="slds-item">
                                <a href="/{!folderId}" target="_blank" name="">
                                    {!$Label.labelMassEmailViewTemplates}
                                </a>
                            </li>
                            <li class="slds-item">
                                <apex:outputPanel id="panelEditTemplate">
                                    &nbsp;&nbsp;
                                    <apex:outputText rendered="{!templateId!=null}">
                                        <a href="{!IF(templateId!=null, '/'+templateId, '')}" target="_blank">
                                            {!$Label.labelMassEmailEditTemplate}
                                        </a>
                                    </apex:outputText>
                                </apex:outputPanel>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="slds-form-element slds-p-top--small slds-p-horizontal--medium">
                    <apex:outputLabel value="{!$Label.labelSubject}" styleClass="slds-form-element__label" for="readSubject"/>
                    <div class="slds-form-element__control">
                        <div class="slds-text-body--regular">
                            <apex:outputText id="txtSubject" value="{!strSubject}" />
                            <apex:inputText id="readSubject" value="{!strSubject}" html-readonly="true" styleClass="slds-assistive-text" />
                        </div>
                    </div>
                </div>
                <div class="slds-form-element slds-p-top--small slds-p-horizontal--medium">
                    <apex:outputLabel value="{!$Label.labelMessageBody}" styleClass="slds-form-element__label" for="readMessage"/>
                    <div class="slds-form-element__control">
                        <div class="slds-text-body--regular">
                            <apex:outputText id="txtMessage" value="{!strMessage}" escape="false" />
                            <apex:inputText id="readMessage" value="{!strMessage}" html-readonly="true" styleClass="slds-assistive-text" />
                        </div>
                    </div>
                </div>
            </form>
            <apex:actionStatus id="loading"
                    onstart="document.getElementById('divLoading').style.display = 'block';"
                    onstop="document.getElementById('divLoading').style.display = 'none';" />
        </div>
    </apex:form>
</apex:page>