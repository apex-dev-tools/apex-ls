{
  "name": "apex-ls-mcp",
  "version": "1.0.0",
  "description": "NPX wrapper for Apex Language Server MCP (Model Context Protocol) server",
  "main": "dist/cli.js",
  "bin": {
    "apex-ls-mcp": "./dist/bin/apex-ls-mcp"
  },  
  "config": {
    "jarVersion": "5.9.0",
    "downloadUrl": "https://github.com/apex-dev-tools/apex-ls/releases/download/v{jarVersion}/apex-ls-mcp-{jarVersion}-standalone.jar"
  },
  "scripts": {
    "postinstall": "node dist/install.js",
    "build": "tsc && npm run build:bin",
    "build:bin": "mkdir -p dist/bin && cp src/bin/apex-ls-mcp dist/bin/apex-ls-mcp && chmod +x dist/bin/apex-ls-mcp",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:unit": "jest test/unit",
    "test:integration": "jest test/integration", 
    "test:system": "jest test/system",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:manual": "scripts/manual-test.sh",
    "lint": "tsc --noEmit",
    "pretest": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/node-fetch": "^2.6.0",
    "typescript": "^5.0.0",
    "ts-jest": "^29.2.0",
    "ts-node": "^10.9.0"
  },
  "keywords": [
    "apex",
    "salesforce",
    "language-server",
    "mcp",
    "model-context-protocol"
  ],
  "author": "Apex Dev Tools",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/apex-dev-tools/apex-ls.git",
    "directory": "mcp-npm"
  },
  "homepage": "https://github.com/apex-dev-tools/apex-ls#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "overrides": {
    "glob": "^10.0.0"
  }
}