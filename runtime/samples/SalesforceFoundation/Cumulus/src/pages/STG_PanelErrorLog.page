<apex:page controller="STG_PanelErrorLog_CTRL" >
    <apex:form id="form">
        <div class="slds-m-around--x-large">
            <c:STG_PageHeader sectionLabel="{!$Label.stgNavSystem}" pageLabel="{!$Label.stgNavErrorLog}" />
            <div class="slds-text-body--small slds-m-around--medium"><apex:outputText value="{!$Label.stgHelpErrorLog}" /></div>
            <c:UTIL_PageMessages />
            <div class="slds-grid slds-grid--align-center slds-grid--vertical-align-center slds-m-around--large">
                <apex:commandButton id="clearErrorLog" value="{!$Label.stgBtnClearErrorLog}" action="{!clearErrorLog}" rendered="{!isReadOnlyMode}" status="statusLoad" immediate="true" rerender="form" styleClass="slds-button slds-button--small slds-button--neutral" />
            </div>
        </div>
        <c:UTIL_SoqlListView SoqlListViewConsumer="{!slvConsumer}" />
    </apex:form>
</apex:page>