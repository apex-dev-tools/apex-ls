<apex:page controller="STG_SettingsManager_CTRL" >
    <div class="slds-m-around--x-large slds-p-bottom--large slds-col-rule--bottom">
        <div class="slds-media slds-media--center slds-media--responsive">
            <div class="slds-media__body">
                <h3 class="slds-text-heading--large slds-m-bottom--large">{!$Label.stgNPSPSettings}</h3>
                <p>{!$Label.stgHelpNPSPSettings}</p>
                <p class="slds-text-body--small slds-m-top--x-small"><apex:outputText value="{!$Label.stgHelpSalesforceSetup}" escape="false"/></p>
            </div>
            <div class="slds-media__figure slds-media__figure--reverse">
                <img src="{!URLFOR($Resource.CumulusStaticResources, '/Images/RGB_npsp-stacked-color.png')}" style="height: 75px" alt="NPSP Logo"/>
            </div>
        </div>
    </div>
    <div class="slds-grid">
        <div class="slds-col--padded slds-size--4-of-12">
            <div class="slds-text-heading--medium slds-m-bottom--medium">
                {!$Label.stgTools}
            </div>
            <ul>
                <li><apex:outputText value="{!$Label.stgHelpHealthCheck}" escape="false"/></li>
                <li><apex:outputText value="{!$Label.stgHelpReviewErrorLog}" escape="false"/></li>
            </ul>
        </div>
        <div class="slds-col--padded slds-size--4-of-12">
            <h3 class="slds-text-heading--medium slds-m-bottom--medium">
                {!$Label.stgDocumentation}
            </h3>
            <div>
                <ul>
                    <li><a href="https://powerofus.force.com/NPSP_Documentation" target="_blank" >{!$Label.stgHelpNPSPDoc}</a></li>
                    <li><a href="https://developer.salesforce.com/trailhead/trail/nonprofit_fundraising" target="_blank" >{!$Label.stgNPSPWorkbook}</a></li>
                    <li><a href="https://powerofus.force.com/NPSP_Import_Data" target="_blank" >{!$Label.stgNPSPGuideImportData}</a></li>
                </ul>
            </div>
        </div>
        <div class="slds-col--padded slds-size--4-of-12">
            <div class="slds-text-heading--medium slds-m-bottom--medium">
                {!$Label.stgPowerOfUsHub}
            </div>
            <p><apex:outputText value="{!$Label.stgHelpPowerOfUsHub}" escape="false"/></p>
        </div>
    </div>
</apex:page>